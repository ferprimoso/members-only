<%- include('./partials/header') %>
  <div class="m-0 sm:m-auto bg-white mt-8 max-w-screen-md p-8 sm:rounded-xl flex flex-col items-center ">
    <h1 class="text-4xl mb-8">
      Post Message
    </h1>
    <form method="post" class="flex flex-col justify-center">
      <div class="form-group">
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" class="form-control" required>
      </div>
      <div class="form-group">
        <label for="message">Message: </label>
        <textarea id="message" name="message" rows="4" cols="25" class="form-control" required></textarea>
      </div>
      <button class="button" type="submit"> Submit </button>
    </form>

    <% if (errors) { %>
      <ul>
        <% for(error of errors) { %>
          <li>
            <%= error.msg %>
          </li>
          <% } %>
      </ul>
      <% } %>
  </div>



  <%- include('./partials/footer') %>